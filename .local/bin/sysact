#!/bin/sh

# A dmenu wrapper script for system functions.
# In order for awesome-client to work, awesomeWM
# needs to have the module 'awful.remote' loaded:
# require('awful.remote')

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# case "$(printf "ğŸ”’ lock\nğŸšª leave awesome\nâ™»ï¸ restart awesome\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in

# Hyprland
# case "$(printf "ğŸ”’ lock\nğŸšª leave Hyprland\nâ™»ï¸ restart Hyprland\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown" | rofi -dmenu -i -p 'Action: ')" in
# 	'ğŸ”’ lock') hyprlock ;;
# 	'ğŸšª leave Hyprland') uwsm stop ;;
#     'â™»ï¸ restart Hyprland') hyprctl reload ;;
# 	'ğŸ» hibernate') $ctl hibernate ;;
# 	'ğŸ’¤ sleep') $ctl suspend ;;
# 	'ğŸ”ƒ reboot') $ctl reboot ;;
# 	'ğŸ–¥ï¸shutdown') $ctl poweroff ;;
#     # 'ğŸ“º display off') hyprctl dispatcher dpms off ;;
# 	*) exit 1 ;;
# esac


# Niri
case "$(printf "ğŸ”’ lock\nğŸšª leave Niri\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off" | rofi -dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') hyprlock ;;
	'ğŸšª leave Niri') niri msg action quit;;
	'ğŸ» hibernate') $ctl hibernate ;;
	'ğŸ’¤ sleep') $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff ;;
    'ğŸ“º display off') niri msg action power-off-monitors ;;
	*) exit 1 ;;
esac
