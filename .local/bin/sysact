#!/bin/sh

# A dmenu wrapper script for system functions.
# In order for awesome-client to work, awesomeWM
# needs to have the module 'awful.remote' loaded:
# require('awful.remote')

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# case "$(printf "ğŸ”’ lock\nğŸšª leave awesome\nâ™»ï¸ restart awesome\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
case "$(printf "ğŸ”’ lock\nğŸšª leave awesome\nâ™»ï¸ restart awesome\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off" | rofi -dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') betterlockscreen -l --time-format "%r" ;;
	'ğŸšª leave awesome') kill -TERM "$(pgrep -u "$USER" "\bawesome$")" ;;
    'â™»ï¸ restart awesome') awesome-client 'awesome.restart()' ;;
	'ğŸ» hibernate') $ctl hibernate ;;
	'ğŸ’¤ sleep') $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
