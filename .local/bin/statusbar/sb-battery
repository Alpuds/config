#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ó°‚„ for plugged up, ó±Š£ for discharging on battery, etc.).

# Basically an array of batteries including DS4 controllers
set -- "/sys/class/power_supply/ps-controller-battery*" "/sys/class/power_supply/BAT?*"

case $BLOCK_BUTTON in
	3) notify-send "ðŸ”‹ Battery module" "ó±Ÿ¤: discharging
ðŸ›‘: not charging
ó± ´: stagnant charge
ó°‚„: charging
ó±Š£: charged
ó°‚ƒ: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in "$@"; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
    # If the battery is not present, the script will skip to the next iteration.
    [ -f ${battery}/status ] || continue
	# Sets up the status and capacity
	case "$(cat ${battery}/status 2>&1)" in
		"Full") status="ó±Š£" ;;
		"Discharging") status="ó±Ÿ¤" ;;
		"Charging") status="ó°‚„" ;;
		"Not charging") status="ðŸ›‘" ;;
		"Unknown") status="ó± ´" ;;
		*) exit 1 ;;
	esac
	capacity="$(cat ${battery}/capacity 2>&1)"
	# Will make a warn variable if discharging and low
	[ "$status" = "ó±Š£" ] && [ "$capacity" -le 25 ] && warn="ó°‚ƒ"
	# Prints the info
	printf "%s%s%d%%" "$status" "$warn" "$capacity"; unset warn
done && printf "\\n"
